public class NewsDbConnector {
	
	private SQLiteDatabase mNewsDbRW;
	
	private static final String DB_NAME = "nchucsnews",
								DB_SYS_TABLE = "system",
								DB_NEWS_TABLE = "news_cache";
	
	public NewsDbConnector(){
		NewsDbHelper newsDbHp =  new NewsDbHelper(getApplicationContext(), DB_NAME,
        		null, 1);

		newsDbHp.sCreateTableCommand = "CREATE TABLE " + DB_TABLE + "(" +
				"_id INTEGER PRIMARY KEY," +
				"name TEXT NOT NULL," +
				"sex TEXT," +
				"address TEXT);";		
		
		mNewsDbRW = newsDbHp.getWritableDatabase();
	}
	
	private Context getApplicationContext() {
		// TODO Auto-generated method stub
		return null;
	}
	 

	
	
	
	
}
